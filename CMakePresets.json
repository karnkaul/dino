{
  "version": 1,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ninja-db",
      "displayName": "Debug",
      "description": "Debug build using Ninja/clang",
      "generator": "Ninja",
      "binaryDir": "out/db",
      "cacheVariables": {
        "CMAKE_C_COMPILER": {
          "type": "STRING",
          "value": "clang"
        },
        "CMAKE_CXX_COMPILER": {
          "type": "STRING",
          "value": "clang++"
        },
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "Debug"
        },
        "CMAKE_EXPORT_COMPILE_COMMANDS": {
          "type": "BOOL",
          "value": "ON"
        }
      }
    },
    {
      "name": "ninja-rw",
      "displayName": "RelW",
      "description": "RelW build using Ninja/clang",
      "generator": "Ninja",
      "binaryDir": "out/rw",
      "cacheVariables": {
        "CMAKE_C_COMPILER": {
          "type": "STRING",
          "value": "clang"
        },
        "CMAKE_CXX_COMPILER": {
          "type": "STRING",
          "value": "clang++"
        },
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "RelWithDebInfo"
        }
      }
    },
    {
      "name": "ninja-rl",
      "displayName": "Release",
      "description": "Release build using Ninja/clang",
      "generator": "Ninja",
      "binaryDir": "out/rl",
      "cacheVariables": {
        "CMAKE_C_COMPILER": {
          "type": "STRING",
          "value": "clang"
        },
        "CMAKE_CXX_COMPILER": {
          "type": "STRING",
          "value": "clang++"
        },
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "Release"
        }
      }
    }
  ]
}
